# Função para realizar cálculos
def calcular(operacao, num1, num2):
    if operacao == 'soma':
        return num1 + num2
    elif operacao == 'subtração':
        return num1 - num2
    elif operacao == 'multiplicação':
        return num1 * num2
    elif operacao == 'divisão':
        if num2 == 0:
            return "Erro: Divisão por zero"
        return num1 / num2
    else:
        return "Operação inválida"

# Função principal
def main():
    print("Escolha a operação: soma, subtração, multiplicação, divisão")
    operacao = input("Digite a operação: ").strip().lower()
    num1 = float(input("Digite o primeiro número: "))
    num2 = float(input("Digite o segundo número: "))
    
    resultado = calcular(operacao, num1, num2)
    print(f"O resultado da {operacao} é: {resultado}")

# Executa o programa
if __name__ == "__main__":
    main()
